<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activity.MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"/>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/medium_radius"
                android:layout_margin="@dimen/medium_margin"
                app:cardElevation="@dimen/medium_elevation"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:gravity="center"
                    android:padding="@dimen/medium_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:contentDescription="@string/icon"
                        android:src="@drawable/medium"
                        android:layout_width="@dimen/main_item_icon_height"
                        android:layout_height="@dimen/main_item_icon_height"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/medium"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:layout_marginStart="@dimen/medium_margin"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                    <ImageView
                        android:contentDescription="@string/icon"
                        android:src="@drawable/ic_baseline_navigate_next_24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/medium_radius"
                android:layout_margin="@dimen/medium_margin"
                app:cardElevation="@dimen/medium_elevation"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:padding="@dimen/medium_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/byArticle"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:contentDescription="@string/icon"
                            android:src="@drawable/ic_article"
                            android:layout_width="@dimen/main_item_icon_height"
                            android:layout_height="@dimen/main_item_icon_height"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/by_article_link"
                            style="@style/TextAppearance.AppCompat.Title"
                            android:layout_marginStart="@dimen/medium_margin"/>

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>

                        <ImageView
                            android:id="@+id/ivArticle"
                            android:contentDescription="@string/icon"
                            android:src="@drawable/ic_baseline_navigate_next_24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/innerArticle"
                        android:visibility="gone"
                        tools:visibility="visible"
                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/medium_margin"
                            android:hint="@string/article_link"
                            android:layout_height="wrap_content"
                            android:id="@+id/editLayout">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:lines="1"
                                android:gravity="center"
                                android:id="@+id/editText"/>

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/medium_margin"
                            android:text="@string/read_article"
                            android:id="@+id/btnRead"/>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/categotry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/medium_radius"
                android:layout_margin="@dimen/medium_margin"
                app:cardElevation="@dimen/medium_elevation"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/byCategory"
                        android:gravity="center"
                        android:padding="@dimen/medium_padding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:contentDescription="@string/icon"
                            android:src="@drawable/ic_categories"
                            android:layout_width="@dimen/main_item_icon_height"
                            android:layout_height="@dimen/main_item_icon_height"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/by_category"
                            style="@style/TextAppearance.AppCompat.Title"
                            android:layout_marginStart="@dimen/medium_margin"/>

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>

                        <ImageView
                            android:id="@+id/ivCategory"
                            android:contentDescription="@string/icon"
                            android:src="@drawable/ic_baseline_navigate_next_24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

               <LinearLayout
                   android:visibility="gone"
                   android:id="@+id/innerCategory"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">

                   <com.google.android.material.textview.MaterialTextView
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/subject_height"
                       android:gravity="center_vertical"
                       android:text="@string/startup"
                       android:id="@+id/startup"
                       android:paddingStart="@dimen/medium_padding"
                       android:layout_marginStart="@dimen/margin_start_subjects"
                       android:background="?attr/selectableItemBackground"
                       style="@style/TextAppearance.Material3.TitleSmall"/>

                   <com.google.android.material.textview.MaterialTextView
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/subject_height"
                       android:gravity="center_vertical"
                       android:text="@string/life"
                       android:id="@+id/life"
                       android:paddingStart="@dimen/medium_padding"
                       android:layout_marginStart="@dimen/margin_start_subjects"
                       android:background="?attr/selectableItemBackground"
                       style="@style/TextAppearance.Material3.TitleSmall"/>

                   <com.google.android.material.textview.MaterialTextView
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/subject_height"
                       android:gravity="center_vertical"
                       android:text="@string/life_lessions"
                       android:id="@+id/lifeLessons"
                       android:paddingStart="@dimen/medium_padding"
                       android:layout_marginStart="@dimen/margin_start_subjects"
                       android:background="?attr/selectableItemBackground"
                       style="@style/TextAppearance.Material3.TitleSmall"/>

                   <com.google.android.material.textview.MaterialTextView
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/subject_height"
                       android:gravity="center_vertical"
                       android:text="@string/politics"
                       android:id="@+id/politics"
                       android:paddingStart="@dimen/medium_padding"
                       android:layout_marginStart="@dimen/margin_start_subjects"
                       android:background="?attr/selectableItemBackground"
                       style="@style/TextAppearance.Material3.TitleSmall"/>

                   <com.google.android.material.textview.MaterialTextView
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/subject_height"
                       android:gravity="center_vertical"
                       android:text="@string/travel"
                       android:id="@+id/travel"
                       android:paddingStart="@dimen/medium_padding"
                       android:layout_marginStart="@dimen/margin_start_subjects"
                       android:background="?attr/selectableItemBackground"
                       style="@style/TextAppearance.Material3.TitleSmall"/>

                   <com.google.android.material.textview.MaterialTextView
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/subject_height"
                       android:gravity="center_vertical"
                       android:text="@string/poetry"
                       android:id="@+id/poetry"
                       android:paddingStart="@dimen/medium_padding"
                       android:layout_marginStart="@dimen/margin_start_subjects"
                       android:background="?attr/selectableItemBackground"
                       style="@style/TextAppearance.Material3.TitleSmall"/>

                   <com.google.android.material.textview.MaterialTextView
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/subject_height"
                       android:gravity="center_vertical"
                       android:text="@string/entrepreneurship"
                       android:id="@+id/entrepreneurship"
                       android:paddingStart="@dimen/medium_padding"
                       android:layout_marginStart="@dimen/margin_start_subjects"
                       android:background="?attr/selectableItemBackground"
                       style="@style/TextAppearance.Material3.TitleSmall"/>

                   <com.google.android.material.textview.MaterialTextView
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/subject_height"
                       android:gravity="center_vertical"
                       android:text="@string/education"
                       android:id="@+id/education"
                       android:paddingStart="@dimen/medium_padding"
                       android:layout_marginStart="@dimen/margin_start_subjects"
                       android:background="?attr/selectableItemBackground"
                       style="@style/TextAppearance.Material3.TitleSmall"/>

                   <com.google.android.material.textview.MaterialTextView
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/subject_height"
                       android:gravity="center_vertical"
                       android:text="@string/health"
                       android:id="@+id/health"
                       android:paddingStart="@dimen/medium_padding"
                       android:layout_marginStart="@dimen/margin_start_subjects"
                       android:background="?attr/selectableItemBackground"
                       style="@style/TextAppearance.Material3.TitleSmall"/>

                   <com.google.android.material.textview.MaterialTextView
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/subject_height"
                       android:gravity="center_vertical"
                       android:text="@string/love"
                       android:id="@+id/love"
                       android:paddingStart="@dimen/medium_padding"
                       android:layout_marginStart="@dimen/margin_start_subjects"
                       android:background="?attr/selectableItemBackground"
                       style="@style/TextAppearance.Material3.TitleSmall"/>

                   <com.google.android.material.textview.MaterialTextView
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/subject_height"
                       android:gravity="center_vertical"
                       android:text="@string/design"
                       android:id="@+id/design"
                       android:paddingStart="@dimen/medium_padding"
                       android:layout_marginStart="@dimen/margin_start_subjects"
                       android:background="?attr/selectableItemBackground"
                       style="@style/TextAppearance.Material3.TitleSmall"/>

                   <com.google.android.material.textview.MaterialTextView
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/subject_height"
                       android:gravity="center_vertical"
                       android:text="@string/writing"
                       android:id="@+id/writing"
                       android:paddingStart="@dimen/medium_padding"
                       android:layout_marginStart="@dimen/margin_start_subjects"
                       android:background="?attr/selectableItemBackground"
                       style="@style/TextAppearance.Material3.TitleSmall"/>

                   <com.google.android.material.textview.MaterialTextView
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/subject_height"
                       android:gravity="center_vertical"
                       android:text="@string/technology"
                       android:id="@+id/technology"
                       android:paddingStart="@dimen/medium_padding"
                       android:layout_marginStart="@dimen/margin_start_subjects"
                       android:background="?attr/selectableItemBackground"
                       style="@style/TextAppearance.Material3.TitleSmall"/>

                   <com.google.android.material.textview.MaterialTextView
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/subject_height"
                       android:gravity="center_vertical"
                       android:text="@string/self_improvement"
                       android:id="@+id/selfImprovement"
                       android:paddingStart="@dimen/medium_padding"
                       android:layout_marginStart="@dimen/margin_start_subjects"
                       android:background="?attr/selectableItemBackground"
                       style="@style/TextAppearance.Material3.TitleSmall"/>

                   <com.google.android.material.textview.MaterialTextView
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/subject_height"
                       android:gravity="center_vertical"
                       android:text="@string/business"
                       android:id="@+id/business"
                       android:paddingStart="@dimen/medium_padding"
                       android:layout_marginStart="@dimen/margin_start_subjects"
                       android:background="?attr/selectableItemBackground"
                       style="@style/TextAppearance.Material3.TitleSmall"/>

                   <com.google.android.material.textview.MaterialTextView
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/subject_height"
                       android:gravity="center_vertical"
                       android:text="@string/music"
                       android:id="@+id/music"
                       android:paddingStart="@dimen/medium_padding"
                       android:layout_marginStart="@dimen/margin_start_subjects"
                       android:background="?attr/selectableItemBackground"
                       style="@style/TextAppearance.Material3.TitleSmall"/>

                   <com.google.android.material.textview.MaterialTextView
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/subject_height"
                       android:gravity="center_vertical"
                       android:text="@string/social_media"
                       android:id="@+id/social_media"
                       android:paddingStart="@dimen/medium_padding"
                       android:layout_marginStart="@dimen/margin_start_subjects"
                       android:background="?attr/selectableItemBackground"
                       style="@style/TextAppearance.Material3.TitleSmall"/>

                   <com.google.android.material.textview.MaterialTextView
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/subject_height"
                       android:gravity="center_vertical"
                       android:text="@string/sports"
                       android:id="@+id/sports"
                       android:paddingStart="@dimen/medium_padding"
                       android:layout_marginStart="@dimen/margin_start_subjects"
                       android:background="?attr/selectableItemBackground"
                       style="@style/TextAppearance.Material3.TitleSmall"/>

                   <com.google.android.material.textview.MaterialTextView
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/subject_height"
                       android:gravity="center_vertical"
                       android:text="@string/food"
                       android:id="@+id/food"
                       android:paddingStart="@dimen/medium_padding"
                       android:layout_marginStart="@dimen/margin_start_subjects"
                       android:background="?attr/selectableItemBackground"
                       style="@style/TextAppearance.Material3.TitleSmall"/>

                   <com.google.android.material.textview.MaterialTextView
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/subject_height"
                       android:gravity="center_vertical"
                       android:text="@string/art"
                       android:id="@+id/art"
                       android:paddingStart="@dimen/medium_padding"
                       android:layout_marginStart="@dimen/margin_start_subjects"
                       android:background="?attr/selectableItemBackground"
                       style="@style/TextAppearance.Material3.TitleSmall"/>

               </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:layout_width="wrap_content"
        android:visibility="invisible"
        android:layout_height="wrap_content"
        android:id="@+id/removeAds"
        android:text="@string/remove_ads"
        app:icon="@drawable/ic_baseline_attach_money_24"
        android:layout_gravity="bottom|center"
        android:layout_margin="@dimen/fab_margin"
        app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>